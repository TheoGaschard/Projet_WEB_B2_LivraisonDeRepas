{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block main %}
    <h1>Dashboard</h1>

<div class="rowDashboard">
<div class="card text-center" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title">Nombre de restaurants</h5>
    <p class="card-text">{{ restaurants }}</p>
  </div>
</div>
<div class="card text-center" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title">Nombre de commandes passées</h5>
    <p class="card-text">{{ commandePasse }}</p>
  </div>
</div>
<div class="card text-center" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title">Nombre de commandes en cours</h5>
    <p class="card-text">{{ commandeCours }}</p>
  </div>
  </div>
<div class="card text-center" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title">Nombre de commandes terminées</h5>
    <p class="card-text">{{ commandeFinis }}</p>
  </div>
  </div>
<div class="card text-center" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title">Revenus total</h5>
    <p class="card-text">{{ revenus }}€</p>
  </div>
</div>



</div>
{% endblock %}
