{% extends 'base.html.twig' %}

{% block title %}Nos restaurants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <head>
        <title>Nos restaurants</title>
        <link rel="stylesheet" href="css/responsive.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <meta charset="utf-8">
    </head> 
<body>



      <div class="background-resto">

        <h1 class="title">Nos restaurants proche de chez vous.</h1>

        <ul class="card-grid">
            {% for restaurant in restaurants %}
            <a href="{{ path('restaurant', {'id': restaurant.id}) }}">
                <li class="carte">
                    <div class="card widthCard">
                    <img src={{ restaurant.image }} class="card-img-top" width="150" height="150" alt="tacos">
                    <div class="card-body">
                    <h5 class="card-title">{{ restaurant.nom }}</h5>
                    <p class="card-text">{{ restaurant.description }}</p>
                    </div>
                    </div>
                </li>
            </a>
            {% endfor %}
        </ul>

      </div>



</body>
</html>

{% endblock %}
