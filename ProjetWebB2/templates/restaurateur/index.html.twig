{% extends 'base.html.twig' %}

{% block title %}Nos restaurants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<!DOCTYPE html>
    <head>
        <title>Nos restaurants</title>
        <link rel="stylesheet" href="css/responsive.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <meta charset="utf-8">
    </head> 
<body>



      <div class="background-resto">

        <h1 class="title">Mes restaurants</h1>

        <ul class="d-flex">
            {% for restaurant in restaurants %}
            
            {% if restaurant.idRestaurateur ==  app.user.id %}
                <li class="carte"><div class="card" style="max-width: 265px;">
                        <img src="/img/restaurants/{{ restaurant.filename }}" class="card-img-top" width="150" height="150" alt="resto">
                        <div class="card-body">
                        <h5 class="card-title">{{ restaurant.nom }}</h5>
                        <p class="card-text">{{ restaurant.description }}</p>
                        </div>
                    </div>
                </li>
            {% endif %}

            {% endfor %}
        </ul>

      </div>



</body>
</html>

{% endblock %}
